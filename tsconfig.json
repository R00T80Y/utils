{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "lib": ["es2015", "DOM"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": ["src/"],
  "exclude": ["dist", "build", "src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"],
}
